<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="카테고리 재설정"
                android:padding="10dp"
                android:fontFamily="@font/suite_bold"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/sports_cat"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="0dp">

                        <ImageButton
                            android:id="@+id/sports_category1"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"

                            android:src="@drawable/sports_category_img" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/sports_category2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="운동/스포츠"
                        android:fontFamily="@font/suite_bold"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tour_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="0dp">

                        <ImageButton
                            android:id="@+id/tour_category1"
                            android:layout_width="86dp"
                            android:layout_height="90dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tour_category_img" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tour_category2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="여행"
                        android:fontFamily="@font/suite_bold"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/festival_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="0dp">

                        <ImageButton
                            android:id="@+id/festival_category1"
                            android:layout_width="86dp"
                            android:layout_height="90dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/festival_category_img" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/festival_category2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="문화/공연"
                        android:fontFamily="@font/suite_bold"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/music_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="0dp">

                        <ImageButton
                            android:id="@+id/music_category1"
                            android:layout_width="86dp"
                            android:layout_height="90dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/music_category_img" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/music_category2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="음악/악기"
                        android:fontFamily="@font/suite_bold"
                        android:textColor="#000000" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="회원정보 수정"
            android:fontFamily="@font/suite_bold"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView

            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="100dp" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_launcher_foreground" />
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="이름"
            android:background="@drawable/edit_text_drawble"
            android:padding="10dp"
            android:fontFamily="@font/suite_light"
            android:inputType="textEmailAddress"
            android:textSize="19dp" />

        <EditText
            android:id="@+id/phoneNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="전화번호"
            android:background="@drawable/edit_text_drawble"
            android:padding="10dp"
            android:fontFamily="@font/suite_light"
            android:inputType="phone" />

        <EditText
            android:id="@+id/birthDayEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="생년월일"
            android:background="@drawable/edit_text_drawble"
            android:padding="10dp"
            android:fontFamily="@font/suite_light"
            android:inputType="date" />

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="주소(도시랑 동까지만 입력해주세요)"
            android:background="@drawable/edit_text_drawble"
            android:padding="10dp"
            android:fontFamily="@font/suite_light"
            android:inputType="textPostalAddress" />

        <android.widget.Button
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="5dp"
            android:text="수정"
            android:background="@drawable/edit_button_drawble"
            android:padding="10dp"
            android:fontFamily="@font/suite_bold"
            android:textColor="#000000" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/buttons_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:visibility="gone"
        android:layout_alignParentBottom = "true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="갤러리"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사진촬영"
                android:textColor="@color/white" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>